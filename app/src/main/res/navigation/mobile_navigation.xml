<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">
    <include app:graph="@navigation/feature_home_nav_graph"/>
    <include app:graph="@navigation/feature_media_details_nav_graph"/>

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.koniukhov.cinecirclex.feature.home.ui.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />
    <fragment
        android:id="@+id/navigation_ai_recommendations"
        android:name="com.koniukhov.cinecirclex.feature.ai.recommendations.ui.RecommendationsFragment"
        android:label="@string/for_you"
        tools:layout="@layout/fragment_recommendations" />
    <fragment
        android:id="@+id/navigation_collections"
        android:name="com.koniukhov.cinecirclex.feature.lists.ui.CollectionsFragment"
        android:label="CollectionsFragment"
        tools:layout="@layout/collections_fragment"/>
    <fragment
        android:id="@+id/navigation_search"
        android:name="com.koniukhov.cinecirclex.feature.search.ui.SearchFragment"
        android:label="SearchFragment"
        tools:layout="@layout/fragment_search"/>

</navigation>